  <section id="addTrip" class="container">
    <div class="form-wrap">
      <h1>Add A Blog Post</h1>
      <p>Add a Blog Post of a trail that you've been on!</p>
      {{#each errors}}
      <div class="error">
          <p>{{text}}</p>
      </div>
      {{/each}}
      <form action="/add" method="POST">
        <div class="input-group">
          <label for="title">Blog Entry...</label>
          <input type="text" name="id" id="id" class="input-box" placeholder="eg. 1, 2, 3, ..." maxlength="100" value={{id}}>
        </div>
        <div class="input-group">
          <label for="title">Trail Name</label>
          <input type="text" name="nayme" id="nayme" class="input-box" placeholder="eg. zion national park, yosemite national park, great smokey mountains"
            maxlength="100" value={{nayme}} {{log nayme}}> 
        </div>
        <div class="input-group">
          <label for="location">Trail Location</label>
          <input type="text" name="location" id="location" class="input-box" placeholder="eg. Tennessee, Montana, North Carolina"
          maxlength="100" value={{location}}>
        </div>
        <div class="input-group">
          <label for="length">How Long Did You Hike? (in Miles)</label>
          <input type="number" name="length" id="length" class="input-box" placeholder="eg. 10, 15, 20" value={{length}}>
        </div>
        <div class="input-group">
          <label for="blog">Blog Away!</label>
          <input type="text" name="blog" id="blog" class="input-box" placeholder="What an amazing adventure..." >
        </div>
        {{!-- new --}}
        <button type="submit" value="Add Trip" 
        id = "wtf"
        class="btn btn-reverse">Add Blog Entry</button>
      </form>
      </div>

  </section>

  <script src= "/js/data.js"></script>
